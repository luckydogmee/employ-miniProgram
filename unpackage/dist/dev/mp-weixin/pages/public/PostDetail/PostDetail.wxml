<view class="container detail-container"><view class="detail-wrapper"><view class="swiper-container"><swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"><swiper-item><view class="swiper-item uni-bg-red"><image src="../../../static/img/banner1.png" mode></image></view></swiper-item><swiper-item><view class="swiper-item uni-bg-green"><image src="../../../static/img/banner2.png" mode></image></view></swiper-item></swiper></view><view class="detail-content"><cell vue-id="1" title="{{jobInfo.storeName}}" bind:__l="__l" vue-slots="{{['default']}}"><view class="content"><text>{{"招聘人数： "+jobInfo.num+"人"}}</text><text>{{"地址："+jobInfo.address}}</text></view></cell><cell vue-id="2" title="职位名称" content="{{jobInfo.jobName}}" bind:__l="__l"></cell><cell vue-id="3" title="职位描述" content="{{jobInfo.description}}" bind:__l="__l"></cell><cell vue-id="4" title="岗位要求" content="{{required}}" bind:__l="__l"></cell><cell vue-id="5" title="试用期" content="{{$root.f0}}" bind:__l="__l"></cell><cell vue-id="6" title="转正后" bind:__l="__l" vue-slots="{{['default']}}"><view class="content"><text>{{"底薪："+jobInfo.officialSalary+"元/月"}}</text><text>{{"月均收入："+jobInfo.avgSalary+"元"}}</text></view></cell><cell vue-id="7" title="悬赏信息" subTitle="{{jobInfo.reward+'元/人'}}" bind:__l="__l"></cell><cell vue-id="8" title="面试时间" content="{{jobInfo.interviewTime}}" bind:__l="__l"></cell><cell vue-id="9" title="过保时间" subTitle="{{jobInfo.overtime+'天'}}" bind:__l="__l"></cell></view></view><block wx:if="{{loginType==='B'}}"><view class="detail-footer"><block wx:if="{{jobInfo.status==1}}"><button data-event-opts="{{[['tap',[['modifyJob',['$event']]]]]}}" class="default-btn" bindtap="__e">修改</button></block><block wx:if="{{jobInfo.status==1}}"><button data-event-opts="{{[['tap',[['unShelveJob',['$event']]]]]}}" class="default-btn" bindtap="__e">下架</button></block><block wx:if="{{jobInfo.status==1}}"><button class="default-btn" open-type="share">分享</button></block><block wx:if="{{jobInfo.status==2}}"><button data-event-opts="{{[['tap',[['shelveJob',['$event']]]]]}}" class="default-btn" bindtap="__e">上架</button></block><block wx:if="{{jobInfo.status==0}}"><button class="default-btn">审核中</button></block></view></block><block wx:else><view class="detail-footer"><block wx:if="{{jobInfo.collectionJobStatus===0}}"><button data-event-opts="{{[['tap',[['recommend',['$event']]]]]}}" class="default-btn" bindtap="__e">推荐</button></block><block wx:else><button data-event-opts="{{[['tap',[['recceiveOrder',['$event']]]]]}}" class="default-btn" bindtap="__e">接单</button></block><button class="default-btn">复制链接</button><button class="default-btn" open-type="share">分享</button></view></block></view>