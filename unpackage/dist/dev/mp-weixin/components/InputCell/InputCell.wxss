.cell-container {
  height: 70rpx;
  border: 1rpx solid #cccccc;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  background: #FFFFFF;
  position: relative;
}
.cell-container.sell {
    border: unset;
    border-bottom: 1rpx solid #cccccc;
    padding: unset;
    margin-top: 24rpx;
    margin-bottom: unset;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
}
.cell-container.sell .placeholder {
      color: #595959;
      font-size: 24rpx;
}
.cell-container .cell-title {
    color: #272626;
}
.cell-container .cell-content {
    color: #595959;
}
.cell-title {
  min-width: 200rpx;
  width: 360rpx;
  color: #808080;
  width: auto;
}
.cell-content {
  width: 400rpx !important;
  text-align: right;
  color: #5a5a5a;
  width: auto;
}
.cell-content.scale {
    width: 300rpx !important;
}
.cell-content.floatleft {
    text-align: left;
}
.slot {
  margin-left: 20rpx;
}
.plugin {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 9999;
}
.required {
  color: #ff8352;
}

